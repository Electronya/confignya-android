<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <View
        android:id="@+id/services_home_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/services_info_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/services_home_divider"
        android:layout_alignStart="@id/services_home_divider"
        android:tint="@color/colorPrimary"
        android:contentDescription="@string/services_state_content_desc"
        android:src="@drawable/ic_baseline_settings_pirblaster_24" />

    <TextView
        android:id="@+id/services_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/services_home_divider"
        android:layout_toEndOf="@id/services_info_state"
        android:textColor="@color/colorPrimary"
        android:text="@string/services_info_default_name" />

    <TextView
        android:id="@+id/services_info_host_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/services_info_name"
        android:layout_toEndOf="@id/services_info_state"
        android:textColor="@color/colorPrimary"
        android:text="@string/services_info_host_label" />

    <TextView
        android:id="@+id/services_info_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/services_info_name"
        android:layout_toEndOf="@id/services_info_host_label"
        android:textColor="@color/colorPrimary"
        android:text="@string/services_info_default_host" />

    <TextView
        android:id="@+id/services_info_port_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/services_info_name"
        android:layout_toEndOf="@id/services_info_host"
        android:textColor="@color/colorPrimary"
        android:text="@string/services_info_port_label" />

    <TextView
        android:id="@+id/services_info_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/services_info_name"
        android:layout_toEndOf="@id/services_info_port_label"
        android:textColor="@color/colorPrimary"
        android:text="@string/services_info_default_port" />
</RelativeLayout>
